{
  "name": "dailytask",
  "displayName": "DailyTask",
  "description": "",
  "version": "0.0.2",
	"publisher": "xnumb",
  "engines": {
    "vscode": "^1.75.0"
  },
  "categories": [
    "Other"
  ],
  "keywords": [
    "daily",
    "task",
    "countdown",
    "plan"
  ],
  "activationEvents": [],
  "main": "./out/extension.js",
  "contributes": {
    "viewsContainers": {
      "activitybar": [
        {
          "id": "dailytask",
          "title": "DailyTask",
          "icon": "$(target)"
        }
      ]
    },
    "views": {
      "dailytask": [
        {
          "type": "webview",
          "id": "dailyTask.countdown",
          "name": "DailyTask"
        }
      ]
    },
    "commands": [
      {
        "command": "dailyTask.add",
        "category": "dailyTask",
        "title": "add",
        "icon": "$(add)"
      },
      {
        "command": "dailyTask.reset",
        "category": "dailyTask",
        "title": "reset",
        "icon": "$(clock)"
      },
      {
        "command": "dailyTask.clear",
        "category": "dailyTask",
        "title": "clear",
        "icon": "$(clear-all)"
      }
    ],
    "menus": {
      "view/title": [
        {
          "command": "dailyTask.add",
          "group": "navigation",
          "when": "view == dailyTask.countdown"
        },
        {
          "command": "dailyTask.reset",
          "group": "navigation",
          "when": "view == dailyTask.countdown"
        }
      ]
    }
  },
  "repository": {
    "type": "git",
    "url": "git@github.com:xnumb/dailytask.git"
  },
  "scripts": {
    "vscode:prepublish": "yarn run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "yarn run compile && yarn run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/vscode": "^1.75.0",
    "@types/glob": "^8.0.1",
    "@types/mocha": "^10.0.1",
    "@types/node": "16.x",
    "@typescript-eslint/eslint-plugin": "^5.49.0",
    "@typescript-eslint/parser": "^5.49.0",
    "eslint": "^8.33.0",
    "glob": "^8.1.0",
    "mocha": "^10.1.0",
    "typescript": "^4.9.4",
    "@vscode/test-electron": "^2.2.2"
  }
}
